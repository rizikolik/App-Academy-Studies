<div class="container">

<h1><%=@cat.name.capitalize%>'s Specs</h1>
<div class="row">
    <div class="col table-head">Name</div>
     <div class="col table-head">Color</div>
     <div class="col table-head">Id</div>
   </div>

    <div class="row">
        <div class="col"><%=@cat.name %></div>
        <div class="col"><%=@cat.color%></div>
        <div class="col"><%=@cat.id%></div>
    </div>
<div class="container">
<h2>All Toys</h2>

<div class="row">
    <div class="col table-head">Name</div>
     <div class="col table-head">Type</div>
     <div class="col table-head">Id</div>
     
    </div>
    <%@cat.toys.each do |toy|%>
        <div class="row">
            <div class="col"><%=toy.name%></div>
            <div class="col"><%=toy.ttype%></div>
            <div class="col"><%=toy.id%></div>
        </div>
    <%end%>



